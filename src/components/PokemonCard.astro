---

interface Props {
    name: string
    url: string
    isBig?: boolean
}

const { name, url, isBig = false } = Astro.props
const id = url.split('/').at(-2)
const imgUrl = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`

---

<!-- class={`rounded flex flex-col justify-center items-center p-2  border-indigo-300 ${ !isBig && 'border'}`}> -->
<!-- href={`/pokemon/${id}`} Para que sea por id -->
<a 
href={`/pokemons/${name}`}
class:list={[
    'rounded flex flex-col justify-center items-center p-2  border-indigo-300',
    {
        'border': !isBig
    }
]}
>

    <img 
    transition:name={`${name} - image`}
    src={imgUrl} alt={name} 
    class:list={[
        {
            'w-26 h-26 ': isBig,
            'w-22 h-22': !isBig
        }
    ]}
    >
    <span class=`capitalize ${isBig && 'text-3xl'}`>{name}</span>
</a>